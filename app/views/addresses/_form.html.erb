<%= form_with(model: address, remote: true) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <h4> Add a New Address</h4>
    <div class="form-field mt-2">
      <%= form.text_area :title, class: 'form-control mb-2', placeholder: 'Address Type' %>
    </div>

    <div class="form-field">
      <%= form.text_area :address, class: 'form-control mb-2', placeholder: 'Address' %>
    </div>

    <%= form.hidden_field :person_id, value: person.id %>

    <%= form.submit class: 'btn btn-success'%>
  </div>
<% end %>